<p>Click the spark to build energy!</p>
<div id="spark">⚡</div>
<div id="score">Energy: 0</div>
<br>
<button onclick="reset()">Reset</button>

<script>
let score=0;
document.getElementById("spark").onclick=function(){
 score++;
 document.getElementById("score").innerText="Energy: "+score;
}
function reset(){
 score=0;
 document.getElementById("score").innerText="Energy: 0";
}
</script>
